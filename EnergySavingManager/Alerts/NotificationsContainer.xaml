<UserControl x:Class="EnergySavingManager.Alerts.NotificationsContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Alerts="clr-namespace:EnergySavingManager.Alerts" Height="300" Width="150">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="CornflowerBlue">
            <Label Foreground="White">Notificaciones</Label>
        </Border>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      FlowDirection="RightToLeft" 
                      Grid.Row="1">
            <StackPanel Name="AlertsStackPanel" FlowDirection="LeftToRight">        
                <Alerts:AlertItem/>
                <Alerts:AlertItem/>
                <Alerts:AlertItem/>
                <Alerts:AlertItem/>
                <Alerts:AlertItem/>
                <Alerts:AlertItem/>
                <Alerts:AlertItem/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
        
</UserControl>
